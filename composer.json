{
    "name": "fobia/laravel-scout-solr",
    "description": "Laravel Scout Solr engine.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "scout",
        "search",
        "solr"
    ],
    "authors": [
        {
            "name": "Dmitriy Tyurin",
            "email": "fobia3d@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "laravel/scout": "~6.0",
        "solarium/solarium": "~4.0"
    },
    "require-dev": {
        "illuminate/bus": "~5.4.0",
        "minimalcode/search": "^1.0",
        "orchestra/testbench": "~3.4",
        "phpunit/phpunit": "~5.5|~6.0|^7.0",
        "symfony/filesystem": "^3.0|^4.0"
    },
    "autoload": {
        "psr-0": {
            "Fobia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Fobia\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Fobia\\Solrquent\\ScoutServiceProvider"
            ]
        }
    },
    "scripts": {
        "tests": "phpunit",
        "install-phpcsf": "@composer require --dev friendsofphp/php-cs-fixer",
        "phpcsf": "php-cs-fixer fix --ansi --format=txt -v --diff-format=udiff --diff",
        "phpcsf-dry": "@composer phpcsf -- --dry-run"

    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "suggest": {
        "minimalcode/search": "Solr search builder."
    }
}
